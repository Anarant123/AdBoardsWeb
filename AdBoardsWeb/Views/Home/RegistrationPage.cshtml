@model AdBoards.ApiClient.Contracts.Requests.PersonReg;

@{
    ViewData["Title"] = "Регистрация";
    if (Model.Login == null)
    {
        Model.Login = "";
        Model.Birthday = DateTime.Today.AddYears(-14).Date;
        Model.Phone = "";
        Model.Email = "";
        Model.Password = "";
    }
}

<main>
    <div class="container col-md-6 mx-auto">
        <h1>Регистрация</h1>
        <form>
            <div class="form-group my-4">
                <input asp-for="Login" value="@Model.Login" class="form-control" placeholder="Логин...">
            </div>
            <div class="form-group my-4">
                <label for="confirmPassword">Дата рождения:</label>
                <input asp-for="Birthday" value="@Model.Birthday" type="date" class="form-control" max="2009-05-31">
            </div>
            <div class="form-group my-4">
                <input asp-for="Phone" value="@Model.Phone" class="form-control" placeholder="Телефон...">
            </div>
            <div class="form-group my-4">
                <input asp-for="Email" type="email" value="@Model.Email" class="form-control" placeholder="Email...">
            </div>
            <div class="form-group my-4">
                <input asp-for="Password" type="password" class="form-control" placeholder="Пароль...">
            </div>
            <div class="form-group my-4">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторите пароль...">
            </div>
            <div class="container">
                <div class="row">
                    <button type="submit" class="btn btn-dark text-light bg-dark" asp-area="" asp-controller="AuthorizationPage" asp-action="Registration">Зарегистрироваться</button>
                </div>
            </div>
        </form>
    </div>
</main>