@{
    ViewData["Title"] = "Регистрация";
}

<main>
    <div class="container col-md-6 mx-auto">
        <h1>Регистрация</h1>
        <form>
            <div class="form-group my-4">
                <input type="text" class="form-control" id="username" placeholder="Логин...">
            </div>
            <div class="form-group my-4">
                <label for="confirmPassword">Дата рождения:</label>
                <input type="date" class="form-control" id="birthdate">
            </div>
            <div class="form-group my-4">
                <input type="tel" class="form-control" id="phone" placeholder="Телефон...">
            </div>
            <div class="form-group my-4">
                <input type="email" class="form-control" id="email" placeholder="Email...">
            </div>
            <div class="form-group my-4">
                <input type="password" class="form-control" id="password" placeholder="Пароль...">
            </div>
            <div class="form-group my-4">
                <input type="password" class="form-control" id="confirmPassword" placeholder="Повторите пароль...">
            </div>
            <div class="container">
                <div class="row">
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                </div>
            </div>
        </form>
    </div>
</main>