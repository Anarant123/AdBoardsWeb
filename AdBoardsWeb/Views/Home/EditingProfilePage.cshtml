@{
    ViewData["Title"] = "Редактор профиля";
}

<main>
    <div class="container border-dark">
        <div class="row">
            <div class="col-3">
                <div class="row">
                    <div class="mb-2 text-center ">
                        <img src="/drawable/icon_image_person.png" class="img-thumbnail img-fluid mb-2" height="400" width="400" alt="">
                    </div>
                </div>
                <div class="row mb-2 text-center">
                    <button type="button" class="btn btn-outline-primary btn-block">Установить Фото</button>
                </div>
            </div>
            <div class="col-9">
                <div class="mb-1">
                    <label class="form-label">Никнейм:</label>
                    <input class="form-control" value="@Model.Name">
                </div>
                <div class="mb-1">
                    <label class="form-label">Номер телефона:</label>
                    <input class="form-control" value="@Model.Phone">
                </div>
                <div class="mb-1">
                    <label class="form-label">Почта:</label>
                    <input class="form-control" value="@Model.Email">
                </div>
                <div class="mb-1">
                    <label class="form-label">Дата рождения:</label>
                    <input class="form-control" value="@Model.Birthday">
                </div>
                <div class="mb-1">
                    <label class="form-label">Город:</label>
                    <input class="form-control" value="@Model.City">
                </div>
                <div class="row">
                    <div class="col-6 text-center d-grid gap-2 mx-auto">
                        <button type="button" class="btn btn-outline-primary btn-block">Сохранить изменения</button>
                    </div>
                    <div class="col-6 text-center d-grid gap-2 mx-auto">
                        <button type="button" class="btn btn-outline-primary btn-block">Сбросить изменения</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>