@{
    ViewData["Title"] = "Объявления";
}

<main>
    <div class="container border-dark">
        <div class="row">
            <div class="col-3">
                <div class="mb-1">
                    <h1 class="h1 text-center" style="color: rgb(0,123,255);">Фильтры</h1>
                </div>
                <div class="mb-1">
                    <label class="form-label">Цена от:</label>
                    <input class="form-control">
                </div>
                <div class="mb-1">
                    <label class="form-label">Цена до:</label>
                    <input class="form-control">
                </div>
                <div class="mb-1">
                    <label class="form-label">Город:</label>
                    <input class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">Категория:</label>
                    <select class="form-control" aria-label="Default select example">
                        <option selected>Личные вещи</option>
                        <option value="1">Транспорт</option>
                        <option value="2">Электроника</option>
                        <option value="3">Недвижимость</option>
                    </select>
                </div>
                <div class="row mb-3 ">
                    <div class="col-6 form-check text-center">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Куплю
                        </label>
                    </div>
                    <div class="col-6 form-check text-center">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                            Продам
                        </label>
                    </div>
                </div>
                <div class="mb-2 text-center">
                    <button type="button" class="btn btn-outline-primary">Применить фильтры</button>
                </div>
            </div>

            <div class="col-9">
                <div class="row row-cols-3">
                    @foreach (var ad in Model.AdList)
                    {
                        string base64String = Convert.ToBase64String(ad.Photo);

                        <div class="col-4">
                            <img src="data:image/png;base64,@base64String" class="img-thumbnail img-fluid" alt="">
                            <h5 class="h5">@ad.Name</h5>
                            <h5 class="h5">@ad.Price ₽</h5>
                            <h5 class="h5">@ad.City</h5>
                            <h5 class="h5" hidden="hidden">@ad.Id</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</main>