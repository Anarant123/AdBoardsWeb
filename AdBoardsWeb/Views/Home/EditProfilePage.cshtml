@model AdBoards.ApiClient.Contracts.Requests.EditPersonModel
@{
    ViewData["Title"] = "Редактор профиля";
}

<main>
    <div class="container border-dark">
        <form method="post" name="photoset" enctype="multipart/form-data">
            <div class="row">
                <div class="col-3">
                    <div class="row">
                        <div class="mb-2 text-center ">
                            <img src="@Model.PhotoName" class="img-thumbnail img-fluid mb-2" height="400" width="400" alt=""/>
                        </div>
                    </div>

                    <div class="row mb-2 text-center">
                        <input asp-for="Photo" class="form-control mb-2" placeholder="Путь к файлу..."/>
                        <button type="submit" class="btn btn-dark text-light bg-dark" asp-controller="EditingProfilePage" asp-action="SetPhoto">Установить Фото</button>
                    </div>
                </div>
                <div class="col-9">
                    <div class="mb-1">
                        <label class="form-label">Никнейм:</label>
                        <input asp-for="Name" class="form-control" value="@Model.Name">
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Номер телефона:</label>
                        <input asp-for="Phone" class="form-control" value="@Model.Phone">
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Почта:</label>
                        <input asp-for="Email" class="form-control" value="@Model.Email">
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Дата рождения:</label>
                        <input asp-for="Birthday" type="date" class="form-control" value="@DateOnly.FromDateTime(Model.Birthday)">
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Город:</label>
                        <input asp-for="City" class="form-control" value="@Model.City">
                    </div>
                    <div class="row">
                        <div class="col-6 text-center d-grid gap-2 mx-auto">
                            <button type="submit" class="btn btn-dark text-light bg-dark" asp-area="" asp-controller="EditingProfilePage" asp-action="SaveProfileChanges">Сохранить изменения</button>
                        </div>
                        <div class="col-6 text-center d-grid gap-2 mx-auto">
                            <a type="button" class="btn btn-dark text-light bg-dark" asp-area="" asp-controller="ProfilePage" asp-action="EditProfilePage">Сбросить изменения</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>