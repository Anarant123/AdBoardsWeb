@model RecoveryPasswordViewModel
@{
    ViewData["Title"] = "Восстановление пароля";
}

<div class="container col-md-6 mx-auto">
    <div class="row justify-content-center">
        <form asp-controller="Auth" asp-action="RecoveryPassword" method="post">
            <h1>@ViewData["Title"]</h1>
            <div class="form-group my-3">
                <label asp-for="Login"></label>
                <input asp-for="Login" class="form-control"/>
                <span asp-validation-for="Login" class="text-error"></span>
            </div>
            <div class="container">
                <div class="row">
                    <button type="submit" class="btn btn-dark text-light bg-dark col mx-1">Отправить</button>
                </div>
            </div>
        </form>
    </div>
</div>