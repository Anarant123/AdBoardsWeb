@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container col-md-6 mx-auto">
    <h1>@ViewData["Title"]</h1>
    <form asp-controller="Auth" asp-action="Register" method="post">
        <div class="form-group my-4">
            <label asp-for="Login"></label>
            <input asp-for="Login" class="form-control">
            <span asp-validation-for="Login" class="text-error"></span>
        </div>
        <div class="form-group my-4">
            <label asp-for="Birthday"></label>
            <input asp-for="Birthday" id="birthday" class="form-control">
            <span asp-validation-for="Birthday" class="text-error"></span>
        </div>
        <div class="form-group my-4">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-error"></span>
        </div>
        <div class="form-group my-4">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-error"></span>
        </div>
        <div class="form-group my-4">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-error"></span>
        </div>
        <div class="form-group my-4">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="text-error"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        <div class="container">
            <div class="row">
                <button type="submit" class="btn btn-dark text-light bg-dark">Зарегистрироваться</button>
            </div>
        </div>
    </form>
</div>