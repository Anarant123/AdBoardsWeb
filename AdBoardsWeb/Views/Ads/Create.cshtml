@model CreateAdViewModel
@{
    ViewData["Title"] = "Добавление объявления";
}

<h1>@ViewData["Title"]</h1>
<div class="container border-dark">
    <form asp-controller="Ads" asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-3">
                <div class="mb-2 text-center ">
                    <div class="row mb-2 text-center">
                        <label>Фото</label>
                        <input asp-for="@Model.Photo" class="form-control mb-2"/>
                    </div>
                </div>
            </div>
            <div class="col-9">
                <div class="mb-1">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-error"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Description" class="text-error"></span>
                </div>
                <div class="row mb-1">
                    <div class="col-4 mb-1">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-error"></span>
                    </div>
                    <div class="col-4 mb-1">
                        <label class="form-label">Категория</label>
                        <select asp-for="CategoryId" class="form-control" aria-label="Default select example">
                            <option value="1">Недвижимость</option>
                            <option value="2">Транспорт</option>
                            <option value="3" selected>Личные вещи</option>
                            <option value="4">Услуга</option>
                            <option value="5">Электроника</option>
                        </select>
                    </div>
                    <div class="col-4 mb-1">
                        <label asp-for="City" class="form-label"></label>
                        <input asp-for="City" class="form-control">
                        <span asp-validation-for="City" class="text-error"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <input class="form-check-input form-check-input-dark" type="radio" asp-for="AdTypeId" id="buyRadio" value="1"/>
                            <label class="form-check-label mx-2" for="buyRadio">
                                Куплю
                            </label>
                        </div>
                    </div>
                    <div class="col text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            <input class="form-check-input form-check-input-dark" type="radio" asp-for="AdTypeId" id="sellRadio" value="2" checked/>
                            <label class="form-check-label mx-2" for="sellRadio">
                                Продам
                            </label>
                        </div>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="row text-error"></div>
                <div class="row">
                    <div class="col-6 text-center d-grid gap-2 mx-auto">
                        <button type="submit" class="btn btn-dark text-light bg-dark">Опубликовать</button>
                    </div>
                    <div class="col-6 text-center d-grid gap-2 mx-auto">
                        <form class="p-0">
                            <a type="button" class="btn btn-dark text-light bg-dark" onclick="history.back()">Отмена</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>